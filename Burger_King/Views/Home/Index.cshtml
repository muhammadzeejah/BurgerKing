@model IEnumerable<Burger_King.Models.Burgers>
@{
    ViewData["Title"] = "Home Page";
}
<style>
    .heading {
    text-align: center;
    margin-top: 20px;
    text-decoration: underline;
}

.imw {
    width: 100%;
    position: relative;
    border-radius: 15px;
    height: 100%;
}

.product {
    margin-top: 30px;
    margin-bottom: 30px;
}

.image {
    display: block;
    width: 100%;
    height: auto;
}

.overlay {
    position: absolute;
    top: 9;
    bottom: 0;
    left: 0;
    right: 0;
    height: 60%;
    width: 100%;
    opacity: 0;
    transition: .5s ease;
    background-color: #000;
}

.ccc:hover .overlay {
    opacity: 0.7;
}

.ccc {
    width: 100%;
}

.text {
    color: white;
    font-size: 20px;
    position: absolute;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    text-align: center;
}

.cc1 {
    width: 82%;
    background: #fff;
    color: #000;
    padding: 4px 8px;
    border: 1px solid #000;
    height: 40px;
    border-radius: 7px;
}

    .cc1:hover {
        background: black;
        color: white;
        border: 1px solid #fff;
        transition: background .5s all ease-in-out
    }

.card {
    border: 1px solid;
    margin-bottom: 30px;
    padding: 10px;
    box-shadow: 0 8px 10px rgb(0 0 0 / 0.5);
}

    a,a:hover {
    color: black;
    text-decoration:none;
    }

     .bannerimage {
      width: 100%;
      background-image: url("~/Assets/banner.jpg");
      height: 405px;
      background-position: center;
      border-radius: 10px;
      margin-bottom: 10px;
    }
</style>
<div>
    <img src="~/Assets/bannerimg.png" class="bannerimage"/>
</div>
<h2 class="text-center">Burgers</h2>
<hr />
<div class="container">
    <div class="row product">
        @foreach (var burger in Model)
        {
            <div class="col-md-4 col-lg-3 col-sm-12">
                <a asp-controller="Burgers" asp-action="Details" asp-route-id="@burger.burger_id" class="card">
                    <div class="ccc">
                        <p class="text-center"><img src=@burger.burger_url class="imw"></p>
                    </div>
                    <div class="card-body">
                        <h5 class="text-center">@burger.burger_name</h5>
                        <p class="text-center">Price: $@burger.burger_price</p>
                        <p class="text-center"><input type="submit" name="Save" value="Buy" class=" cc1"></p>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
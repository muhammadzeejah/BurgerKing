@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@model IEnumerable<Burger_King.Models.Sauces>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (SignInManager.IsSignedIn(User))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.sauce_name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.sauce_name)
            </td>
                @if (SignInManager.IsSignedIn(User))
                {
            <td>
                <a asp-action="Edit" asp-route-id="@item.sauce_id">Edit | </a> 
                <a asp-action="Delete" asp-route-id="@item.sauce_id">Delete</a>
            </td>
                }
        </tr>
}
    </tbody>
</table>
